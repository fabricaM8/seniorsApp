<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Seniors" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_seniors</item>
        <item name="popupMenuStyle">@style/PopupMenu.Seniors</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Seniors</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Seniors</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Seniors</item>
        <item name="actionModeBackground">@drawable/cab_background_top_seniors</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_seniors</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Seniors</item>

        <item name="colorPrimary">#EF6C00</item>
        <item name="colorPrimaryDark">#EF5511</item>
        <item name="colorAccent">#EF6C00</item>
        <item name="actionMenuTextColor">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_dark</item>

        <item name="backgroundStacked">@drawable/ab_stacked_solid_seniors</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_seniors</item>
        <item name="progressBarStyle">@style/ProgressBar.Seniors</item>
    </style>

    <style name="ActionBar.Transparent.Seniors" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_seniors</item>
        <item name="progressBarStyle">@style/ProgressBar.Seniors</item>
    </style>

    <style name="PopupMenu.Seniors" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_seniors</item>
    </style>

    <style name="DropDownListView.Seniors" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_seniors</item>
    </style>

    <style name="ActionBarTabStyle.Seniors" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_seniors</item>
    </style>

    <style name="DropDownNav.Seniors" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_seniors</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_seniors</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_seniors</item>
    </style>

    <style name="ProgressBar.Seniors" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_seniors</item>
    </style>

    <style name="ActionButton.CloseMode.Seniors" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_seniors</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Seniors.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Seniors</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Seniors</item>
    </style>


    <style name="defaultButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/dashboard_text_color_button</item>
        <item name="android:textSize">20dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/default_button</item>
    </style>
</resources>