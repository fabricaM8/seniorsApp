<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Seniors" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/seniors_primary_color</item>
        <item name="colorAccent">@color/seniors_primary_color</item>
        <item name="colorPrimaryDark">@color/seniors_secondary_color</item>
        <item name="actionMenuTextColor">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_dark</item>
    </style>

    <style name="defaultButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/dashboard_text_color_button</item>
        <item name="android:textSize">20dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/default_button</item>
    </style>

    <!-- Botoes redondos -->

    <style name="bt_dash" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
    </style>

    <style name="bt_action_dash" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/bt_round</item>
    </style>

    <style name="bt_action_dash_red" parent="bt_dash">
        <item name="android:background">@drawable/bt_round_red</item>
    </style>

    <style name="bt_action_dash_navy" parent="bt_dash">
        <item name="android:background">@drawable/bt_round_navy</item>
    </style>

    <style name="bt_action_dash_green" parent="bt_dash">
        <item name="android:background">@drawable/bt_round_green</item>
    </style>

    <style name="bt_action_dash_purple" parent="bt_dash">
        <item name="android:background">@drawable/bt_round_purple</item>
    </style>

    <style name="bt_action_dash_orange" parent="bt_dash">
        <item name="android:background">@drawable/bt_round_orange</item>
    </style>

    <style name="bt_action_dash_lite_blue" parent="bt_dash">
        <item name="android:background">@drawable/bt_round_lite_blue</item>
    </style>

    <style name="bt_action_active" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/bt_round</item>
    </style>

    <style name="bt_action_inactive" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/bt_round_grey</item>
    </style>

    <!-- Formularios -->

    <style name="vw_input_box">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/brd_text_view_box</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableEnd">@drawable/ic_action_edit_grey</item>
        <item name="android:drawableRight">@drawable/ic_action_edit_grey</item>
        <item name="android:drawableLeft">@drawable/ic_transparent</item>
        <item name="android:drawableStart">@drawable/ic_transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/seniors_primary_color</item>
        <item name="android:textSize">@dimen/form_input_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Checkbox -->

    <style name="cb_default">
        <item name="android:layout_width">30dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@drawable/cb_seniors_text_color</item>
        <item name="android:background">@drawable/cb_seniors</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <!--Botoes de Emergencia-->

    <style name="emergencySamuButton" parent="defaultButton">
        <item name="android:background">@drawable/emergency_samu_button</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
    </style>

    <style name="emergencyPoliceButton" parent="defaultButton">
        <item name="android:background">@drawable/emergency_police_button</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
    </style>

    <style name="emergencyFireButton" parent="defaultButton">
        <item name="android:background">@drawable/emergency_fire_button</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
    </style>
</resources>