<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Seniors" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/seniors_primary_color</item>
        <item name="colorAccent">@color/seniors_primary_color</item>
        <item name="colorPrimaryDark">@color/seniors_secondary_color</item>
        <item name="actionMenuTextColor">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_dark</item>
    </style>

    <style name="defaultButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/dashboard_text_color_button</item>
        <item name="android:textSize">20dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/default_button</item>
    </style>

    <!--Botoes redondos-->

    <style name="bt_action_dash" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/bt_round</item>
    </style>

    <style name="bt_action_active" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/bt_round</item>
    </style>

    <style name="bt_action_inactive" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/bt_round_grey</item>
    </style>

    <!--Formularios-->

    <style name="vw_input_box">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/brd_text_view_box</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableEnd">@drawable/ic_action_edit_grey</item>
        <item name="android:drawableRight">@drawable/ic_action_edit_grey</item>
        <item name="android:drawableLeft">@drawable/ic_transparent</item>
        <item name="android:drawableStart">@drawable/ic_transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/seniors_primary_color</item>
        <item name="android:textSize">@dimen/form_input_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Checkbox-->


    <style name="cb_default">
        <item name="android:layout_width">30dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@drawable/cb_seniors_text_color</item>
        <item name="android:background">@drawable/cb_seniors</item>
    </style>
</resources>