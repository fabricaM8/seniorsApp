<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Taxa de Glicose"
            android:textSize="@dimen/form_input_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/health_glucosis_form_qty"
            android:onClick="openDialogQuantity"
            android:layout_width="fill_parent"
            style="@style/vw_input_box" />

        <!--ACTION BUTTONS-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Data da Medição"
            android:textSize="@dimen/form_input_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/health_glucosis_form_date"
            style="@style/vw_input_box"
            android:layout_width="fill_parent"
            android:onClick="openDatePickerDialogActivity" />

        <TextView
            android:id="@+id/health_glucosis_form_time"
            android:onClick="openTimePickerDialog"
            android:layout_width="fill_parent"
            style="@style/vw_input_box" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"></View>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btCancelGlucosis"
                style="@style/bt_action_inactive"
                android:onClick="cancel"
                android:src="@drawable/ic_action_cancel" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btSaveGlucosis"
                style="@style/bt_action_active"
                android:onClick="saveGlucosis"
                android:src="@drawable/ic_action_confirm"
                android:focusableInTouchMode="true"
                android:nestedScrollingEnabled="false"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>