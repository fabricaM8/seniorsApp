<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#DADADA"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_weight="0.35"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal">

    </LinearLayout>


    <LinearLayout
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/dashButtonContacts"
            style="@style/dashLiteBlueButton"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:drawableTop="@drawable/ic_contacts"
            android:text="Contatos"/>

        <Button
            android:id="@+id/dashButtonAppointments"
            style="@style/dashOrangeButton"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:drawableTop="@drawable/ic_appointments"
            android:text="Consultas"/>

        <Button
            android:id="@+id/dashButtonEmergency"
            style="@style/dashRedButton"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:drawableTop="@drawable/ic_help"
            android:text="Emergência"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/dashButtonCamera"
            style="@style/dashOliveButton"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:drawableTop="@drawable/ic_camera"
            android:text="Câmera"/>

        <Button
            android:id="@+id/dashButtonGps"
            style="@style/dashDarkBlueButton"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:drawableTop="@drawable/ic_location"
            android:text="Meu Local"
            android:onClick="openLocation"/>

        <Button
            android:id="@+id/dashButtonInternet"
            style="@style/dashPurpleButton"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:drawableTop="@drawable/ic_internet"
            android:text="Internet"
            android:onClick="openBrowser"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/dashButtonExtras"
            style="@style/dashBlackButton"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:drawableTop="@drawable/ic_info"
            android:text="Informações"/>

        <Button
            android:id="@+id/dashButtonExercices"
            style="@style/dashGoldButton"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:drawableTop="@drawable/ic_exercises"
            android:text="Exercícios"/>

        <Button
            android:id="@+id/dashButtonMenu"
            style="@style/dashGreenButton"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:drawableTop="@drawable/ic_food"
            android:text="Cardápio"/>
    </LinearLayout>


    <!--footer -->
    <include layout="@layout/app_footer_layout"></include>

</LinearLayout>