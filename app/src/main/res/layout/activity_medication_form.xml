<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="br.com.fabricam8.seniorsapp.MedicationFormActivity">


    <EditText
        android:id="@+id/txtMed_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:hint="Nome da medicação" />

    <EditText
        android:id="@+id/txtMed_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txtMed_Name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:hint="Notas (ex: Tomar em Jejum) " />

    <!--Posologia-->

    <TextView
        android:id="@+id/lbMed_Posology"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Posologia"
        android:layout_below="@+id/txtMed_Description"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="35dp" />

    <LinearLayout
        android:id="@+id/ltMed_Posology"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/lbMed_Posology">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbMed_Qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Tomar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <EditText
                android:id="@+id/txtMed_Dosage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:maxLength="1"
                android:layout_below="@+id/lbMed_Qty"
                android:layout_alignParentLeft="true"
                android:width="40dp" />

            <Spinner
                android:id="@+id/spnMedDosageType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/arr_Dosage"
                android:prompt="@string/dosage_prompt"
                android:layout_toRightOf="@+id/txtMed_Dosage"
                android:layout_alignBottom="@+id/txtMed_Dosage"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/lbMed_Repetition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Repetir em"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <EditText
                android:id="@+id/txtMed_Repetition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:maxLength="2"
                android:layout_below="@+id/lbMed_Repetition"
                android:layout_alignParentLeft="true"
                android:width="40dp" />

            <TextView
                android:id="@+id/lbMed_Hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="horas"
                android:layout_toRightOf="@+id/txtMed_Repetition"
                android:layout_alignBottom="@+id/txtMed_Repetition"
                android:paddingLeft="5dp"/>
        </RelativeLayout>
    </LinearLayout>

    <!--Inicio Tratamento-->

    <TextView
        android:id="@+id/lbMed_Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Inicio do Tratamento"
        android:layout_below="@+id/ltMed_Posology"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="35dp" />

    <EditText
        android:id="@+id/txtMed_StartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:hint="Clique para marcar"
        android:layout_below="@id/lbMed_Start"
        android:onClick="showTimePickerDialog" />

    <ImageButton
        android:id="@+id/img_Cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_menu_today"
        android:layout_toRightOf="@id/txtMed_StartTime"
        android:layout_alignBottom="@id/txtMed_StartTime"
        android:onClick="showTimePickerDialog" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:onClick="cancel"
            android:id="@+id/btCancelMedication"/>
        <Button
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:onClick="saveMedication"
            android:id="@+id/btSaveMedication"/>
    </LinearLayout>
</RelativeLayout>

