<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/events_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dip">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/health_weight_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="@dimen/form_label_text_size" />

        <TextView
            android:id="@+id/health_weight_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#666666"
            android:textSize="@dimen/form_label_text_size" />

    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"></View>

    <Button
        android:id="@+id/btDeleteWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_action_delete"
        android:text="remover"></Button>

</LinearLayout>




