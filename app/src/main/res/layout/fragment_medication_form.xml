<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/med_form_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-6dp"
            android:layout_marginTop="10dp"
            android:hint="Nome da medicação"
            android:textColor="#222222"
            android:textSize="@dimen/form_input_text_size" />
        <!--Borda inferior da caixa de texto-->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="?attr/colorPrimaryDark"></View>

        <!--Posologia-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="tomar"
            android:textSize="@dimen/form_input_text_size"
            android:textStyle="bold" />

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal">-->

            <TextView
                android:id="@+id/med_form_qty"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textSize="@dimen/form_input_text_size"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:background="@drawable/brd_text_view_orange"
                android:drawableRight="@drawable/ic_action_edit_grey"
                android:drawableEnd="@drawable/ic_action_edit_grey"
                android:clickable="true"
                android:onClick="openDialogQuantity" />

            <TextView
                android:id="@+id/med_form_measure"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:background="@drawable/brd_text_view_orange"
                android:drawableRight="@drawable/ic_action_edit_grey"
                android:drawableEnd="@drawable/ic_action_edit_grey"
                android:clickable="true"
                android:onClick="openDialogMeasure"  />

        <!--</LinearLayout>-->

        <TextView
            android:id="@+id/med_form_periodicity"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:background="@drawable/brd_text_view_orange"
            android:drawableRight="@drawable/ic_action_edit_grey"
            android:drawableEnd="@drawable/ic_action_edit_grey"
            android:clickable="true"
            android:onClick="openDialogPeriodicity" />

        <!--DURANTE-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="repetir durante"
            android:textSize="@dimen/form_input_text_size"
            android:textStyle="bold"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/med_form_during"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:background="@drawable/brd_text_view_orange"
            android:drawableRight="@drawable/ic_action_edit_grey"
            android:drawableEnd="@drawable/ic_action_edit_grey"
            android:clickable="true"
            android:onClick="openDialogRepetition" />

        <!--A PARTIR DE-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:text="a partir de"
            android:textSize="@dimen/form_input_text_size"
            android:textStyle="bold"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/med_form_starting"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:background="@drawable/brd_text_view_orange"
            android:drawableRight="@drawable/ic_action_edit_grey"
            android:drawableEnd="@drawable/ic_action_edit_grey"
            android:clickable="true"
            android:onClick="openDatePickerDialog"/>

        <!--tomar às-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:text="tomar às"
            android:textSize="@dimen/form_input_text_size"
            android:textStyle="bold"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/med_form_time"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:background="@drawable/brd_text_view_orange"
            android:drawableRight="@drawable/ic_action_edit_grey"
            android:drawableEnd="@drawable/ic_action_edit_grey"
            android:clickable="true"
            android:onClick="openTimePickerDialog"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:text="Alarme"
                android:gravity="left"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/med_form_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="Sim"
                android:textOff="Não"/>

        </LinearLayout>
        <!--OBSERVACOES-->

        <EditText
            android:id="@+id/med_form_observ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-6dp"
            android:layout_marginTop="20dp"
            android:hint="Observações"
            android:inputType="textMultiLine"
            android:textColor="#222222"
            android:textSize="@dimen/form_input_text_size" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="?attr/colorPrimaryDark"></View>

        <!--ACTION BUTTONS-->
        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"></View>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btCancelMedication"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bt_round_grey"
                android:onClick="cancel"
                android:src="@drawable/ic_action_cancel" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btSaveMedication"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bt_round"
                android:onClick="saveMedication"
                android:src="@drawable/ic_action_confirm" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>