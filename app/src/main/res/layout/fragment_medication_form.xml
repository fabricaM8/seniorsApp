<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtMed_Name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:hint="Nome da medicação" />

        <EditText
            android:id="@+id/txtMed_Description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Notas (ex: Tomar em Jejum) "
            android:inputType="textMultiLine" />

        <!--Posologia-->

        <TextView
            android:id="@+id/lbMed_Posology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Posologia"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:id="@+id/ltMed_Posology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbMed_Qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="Tomar"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/txtMed_Dosage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/lbMed_Qty"
                    android:width="40dp"
                    android:ems="10"
                    android:inputType="numberSigned"
                    android:maxLength="1" />

                <Spinner
                    android:id="@+id/spnMedDosageType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/txtMed_Dosage"
                    android:layout_toRightOf="@+id/txtMed_Dosage" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/lbMed_Repetition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="Repetir em"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/txtMed_Repetition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/lbMed_Repetition"
                    android:width="40dp"
                    android:ems="10"
                    android:inputType="numberSigned"
                    android:maxLength="2" />

                <TextView
                    android:id="@+id/lbMed_Hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/txtMed_Repetition"
                    android:layout_toRightOf="@+id/txtMed_Repetition"
                    android:paddingLeft="5dp"
                    android:text="horas"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </RelativeLayout>
        </LinearLayout>

        <!--Duracao-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/ltMed_Duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/ltMed_Posology"
                android:layout_marginTop="35dp">

                <TextView
                    android:id="@+id/lbMed_RepeteDuring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="Repetir durante"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <CheckBox
                    android:id="@+id/cbMed_ContUse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/lbMed_RepeteDuring"
                    android:layout_toRightOf="@id/lbMed_RepeteDuring"
                    android:onClick="toggleIsContinuos"
                    android:text="Uso contínuo?" />

                <EditText
                    android:id="@+id/txtMed_Duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/lbMed_RepeteDuring"
                    android:width="40dp"
                    android:ems="10"
                    android:inputType="numberSigned"
                    android:maxLength="2" />

                <TextView
                    android:id="@+id/lbMed_Days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/txtMed_Duration"
                    android:layout_toRightOf="@+id/txtMed_Duration"
                    android:paddingLeft="5dp"
                    android:text="dias"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </RelativeLayout>
        </LinearLayout>

        <!--Inicio Tratamento-->

        <TextView
            android:id="@+id/lbMed_Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Inicio do Tratamento"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <EditText
                android:id="@+id/txtMed_StartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Clique para marcar"
                android:onClick="showTimePickerDialog" />

            <ImageButton
                android:id="@+id/img_Cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@android:drawable/ic_menu_today"
                android:onClick="showTimePickerDialog" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btCancelMedication"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:onClick="cancel"
                android:text="Cancelar" />

            <Button
                android:id="@+id/btSaveMedication"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:onClick="saveMedication"
                android:text="Salvar" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>