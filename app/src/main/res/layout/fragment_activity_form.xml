<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Borda inferior da caixa de texto-->

        <!--Posologia-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Tipo"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:id="@+id/d" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/med_form_measure"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:background="@drawable/brd_text_view_orange"
                android:drawableRight="@drawable/ic_action_edit_grey"
                android:drawableEnd="@drawable/ic_action_edit_grey"
                android:clickable="true"
                android:onClick="openDialogMeasureActivities"  />

        </LinearLayout>

        <!--DURANTE-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Data Inicio"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_marginTop="5dp" />


        <TextView
            android:id="@+id/med_form_during"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:background="@drawable/brd_text_view_orange"
            android:drawableRight="@drawable/ic_action_edit_grey"
            android:drawableEnd="@drawable/ic_action_edit_grey"
            android:clickable="true"
            android:onClick="openDatePickerDialogActivity" />

        <!--A PARTIR DE-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:text="Data Fim"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:id="@+id/." />

        <TextView
            android:id="@+id/med_form_starting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:background="@drawable/brd_text_view_orange"
            android:drawableRight="@drawable/ic_action_edit_grey"
            android:drawableEnd="@drawable/ic_action_edit_grey"
            android:clickable="true"
            android:onClick="openDatePickerDialogActivity"
            android:nestedScrollingEnabled="true" />

        <!--tomar às-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:text="Horario"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:id="@+id/d" />

        <TextView
            android:id="@+id/med_form_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:background="@drawable/brd_text_view_orange"
            android:drawableRight="@drawable/ic_action_edit_grey"
            android:drawableEnd="@drawable/ic_action_edit_grey"
            android:clickable="true"
            android:onClick="openTimePickerDialogActivity"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:text="Repetir"
                android:gravity="left"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:id="@+id/teste" />

            <Switch
                android:id="@+id/med_form_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="Sim"
                android:textOff="Não"/>

        </LinearLayout>
        <!--OBSERVACOES-->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="?attr/colorPrimaryDark"></View>

        <!--ACTION BUTTONS-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btCancelMedication"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bt_round_grey"
                android:onClick="cancel"
                android:src="@drawable/ic_action_cancel" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btSaveMedication"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bt_round"
                android:onClick="saveMedication"
                android:src="@drawable/ic_action_confirm" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>