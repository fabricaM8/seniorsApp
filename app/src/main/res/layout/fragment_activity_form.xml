<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="tipo de exercício"
            android:textStyle="bold"
            android:textSize="@dimen/form_input_text_size"/>

        <TextView
            android:id="@+id/exc_form_type"
            style="@style/vw_input_box"
            android:layout_width="fill_parent"
            android:onClick="openDialogMeasureActivities" />

        <!--DURANTE-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="iniciar em"
            android:textStyle="bold"
            android:textSize="@dimen/form_input_text_size"/>


        <TextView
            android:id="@+id/exc_form_startingt"
            style="@style/vw_input_box"
            android:layout_width="fill_parent"
            android:onClick="openDatePickerDialogActivity" />

        <!--A PARTIR DE-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="finalizar em"
            android:textStyle="bold"
            android:textSize="@dimen/form_input_text_size"/>

        <TextView
            android:id="@+id/exc_form_dateand"
            style="@style/vw_input_box"
            android:layout_width="fill_parent"
            android:onClick="openDatePickerDialogActivity" />

        <!--tomar às-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="horário"
            android:textStyle="bold"
            android:textSize="@dimen/form_input_text_size"/>

        <TextView
            android:id="@+id/exc_form_time"
            style="@style/vw_input_box"
            android:layout_width="fill_parent"
            android:onClick="openTimePickerDialogActivity" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="repetir"
            android:textStyle="bold"
            android:textSize="@dimen/form_input_text_size"
            android:singleLine="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/seniors_primary_color"></View>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:checked="true"
                android:text="D"
                android:textColor="@color/seniors_primary_color" />

            <CheckBox
                android:id="@+id/segunda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:checked="true"
                android:padding="5dp"
                android:text="S"
                android:textColor="@color/seniors_primary_color" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:checked="true"
                android:text="T"
                android:textColor="@color/seniors_primary_color" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:checked="true"
                android:text="Q"
                android:textColor="@color/seniors_primary_color" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:checked="true"
                android:text="Q"
                android:textColor="@color/seniors_primary_color" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:checked="true"
                android:text="S"
                android:textColor="@color/seniors_primary_color" />

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:checked="true"
                android:text="S"
                android:textColor="@color/seniors_primary_color" />
        </LinearLayout>
        <!--OBSERVACOES-->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/seniors_primary_color"></View>

        <!--ACTION BUTTONS-->
        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"></View>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btCancelExercise"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bt_round_grey"
                android:onClick="cancel"
                android:src="@drawable/ic_action_cancel" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btSaveExercise"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bt_round"
                android:onClick="saveExercise"
                android:src="@drawable/ic_action_confirm" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>