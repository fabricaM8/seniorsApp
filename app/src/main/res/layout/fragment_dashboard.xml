<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#DADADA"
    tools:context="br.com.fabricam8.seniorsapp.DashboardActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/dashButtonEmergency"
            style="@style/defaultButton"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:drawableTop="@drawable/ic_help"
            android:text="Medicação"
            android:onClick="runMeds"/>

        <Button
            android:id="@+id/dashButtonGps"
            style="@style/defaultButton"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:drawableTop="@drawable/ic_location"
            android:text="Meu Local"
            android:onClick="openLocation"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal">

        <!--inserir outros botoes-->
    </LinearLayout>

</LinearLayout>